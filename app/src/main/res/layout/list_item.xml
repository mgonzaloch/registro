<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/listas"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_local_shipping_black_24dp" />

        <TextView
            android:id="@+id/text_list_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_list"
            android:layout_toRightOf="@+id/image_list"
            android:text="Line 1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_list_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_list_titel"
            android:layout_toEndOf="@id/image_list"
            android:text="Line 2"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/image_list" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>